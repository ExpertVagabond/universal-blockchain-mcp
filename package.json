{
  "name": "zetachain-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for ZetaChain CLI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "node test-full-server.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "zetachain",
    "blockchain",
    "smart-contracts",
    "web3",
    "defi",
    "cross-chain",
    "bitcoin",
    "ethereum",
    "solana",
    "ai-tools",
    "claude",
    "llm"
  ],
  "author": "ZetaChain Community",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zetachain": "^6.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ExpertVagabond/zetachain-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/ExpertVagabond/zetachain-mcp-server/issues"
  },
  "homepage": "https://github.com/ExpertVagabond/zetachain-mcp-server#readme",
  "bin": {
    "zetachain-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
