{
  "name": "zetachain-mcp-server",
  "description": "Comprehensive ZetaChain MCP server with full CLI integration",
  "version": "1.0.0",
  "runtime": {
    "node": ">=18.0.0",
    "dependencies": ["zetachain"]
  },
  "testing": {
    "profile": "test",
    "environment": {
      "NODE_ENV": "production",
      "ZETACHAIN_NETWORK": "testnet"
    },
    "timeout": 30000,
    "healthCheck": {
      "enabled": true,
      "endpoint": "tools/list",
      "expectedTools": 15
    }
  },
  "deployment": {
    "prebuild": [
      "npm install -g zetachain@latest"
    ],
    "postbuild": [
      "npx zetachain --version"
    ]
  },
  "documentation": {
    "examples": [
      {
        "name": "List Tools",
        "request": {
          "method": "tools/list"
        }
      },
      {
        "name": "Get Network Info",
        "request": {
          "method": "tools/call",
          "params": {
            "name": "get_network_info",
            "arguments": { "network": "testnet" }
          }
        }
      },
      {
        "name": "List Chains",
        "request": {
          "method": "tools/call", 
          "params": {
            "name": "list_chains",
            "arguments": {}
          }
        }
      }
    ]
  }
}